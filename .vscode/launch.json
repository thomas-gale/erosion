{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch chrome against source mapped localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000/build/Debug/bin/engine.html",
            "webRoot": "${workspaceFolder}/engine",
            "sourceMaps": true
        },
        {
            "name": "attach chrome against source mapped localhost",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/engine",
            "sourceMaps": true
        },
        {
          "name": "debug cra tests",
          "type": "node",
          "request": "launch",
          "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
          "args": ["test", "--runInBand", "--no-cache", "--env=jsdom"],
          "cwd": "${workspaceRoot}",
          "protocol": "inspector",
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
        }
    ]
}